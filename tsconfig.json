{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": [
      "es2018"
    ],
    "declaration": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "allowJs": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node", "jest"
    ],
    "baseUrl": "./",
    "paths": {
      "/opt/nodejs/accounts": ["./layers/nodejs/accounts"],
      "@uuid": ["./layers/nodejs/node_modules/uuid"],
    }
  },

  "exclude": [
    "node_modules",
    "cdk.out"
  ]
}
